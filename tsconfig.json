{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "outDir": "bin",
    "strict": true,
    "allowJs": true,
    "baseUrl": "./bin",
    "declaration": true,   
    "sourceMap": true,
    "declarationDir": "./typings",
    "typeRoots": [
      "node_modules/@types",
      "bcryptjs",
      "bson"
    ],
    "types": ["node"]
  },
  "exclude": ["node_modules", ".yarn"],
  "include": ["bin/**/*"],
  "lib": ["es2022"]
}
